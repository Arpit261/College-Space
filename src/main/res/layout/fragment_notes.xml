<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NotesFragment">

    <RelativeLayout
        android:id="@+id/relativebackground"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_modify">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Notes"
            android:padding="4dp"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"/>




    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        >

    <TextView
        android:id="@+id/selectBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/SelectBranchForNotes"
        android:text="Select Branch"/>

    <Spinner
        android:id="@+id/SelectBranchForNotes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        android:layout_below="@id/selectBranch"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/spinner_selector"
        android:spinnerMode="dropdown"/>


        <Button
            android:id="@+id/btnViewNotes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/colorBottomNavigation"
            android:text="View "
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />



    </RelativeLayout>

</FrameLayout>