<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="15dp">

        <ImageView
            android:id="@+id/imageDocs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_docs" />

        <TextView
            android:id="@+id/guesspaperTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imageDocs"
            android:text="Hello Gueesspaper"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guesspaperTitle"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageDocs"
            android:text="Unit 1"
            android:textColor="#3449BD"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/download_guesspaper"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_download" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/download_guesspaper"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_share" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>