<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardNotes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="#19B3AFAF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pdfImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_pdf" />

        <TextView
            android:id="@+id/pdfname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="68dp"
            android:layout_toEndOf="@id/pdfImage"
            android:text="fsnfsnf"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pdfUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pdfname"
            android:layout_marginLeft="32sp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/pdfImage"
            android:text="Unit 1"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toStartOf="@id/downloadPdf"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_share"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/downloadPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_download" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>